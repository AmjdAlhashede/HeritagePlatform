      }

      // Ù…Ø­Ø§ÙˆÙ„Ø© Ø§Ø³ØªØ®Ø±Ø§Ø¬ Ø³Ù†Ø© ÙÙ‚Ø·
      const match3 = text.match(/(\d{4})[Ù…Ù‡Ù€]/);
