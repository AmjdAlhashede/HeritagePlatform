      // Ù…Ø­Ø§ÙˆÙ„Ø© Ø§Ø³ØªØ®Ø±Ø§Ø¬ ØªØ§Ø±ÙŠØ® Ø¨ØµÙŠØºØ© DD-MM-YYYY
      const match2 = text.match(/(\d{1,2})[-/](\d{1,2})[-/](\d{4})/);
      if (match2) {
