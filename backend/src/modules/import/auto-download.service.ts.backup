    videoId: string,
  ): Promise<{
    videoUrl: string;
    audioUrl: string;
    thumbnailUrl: string;
    hlsUrl: string;
  }> {
    if (!this.wasabiService.isEnabled()) {
      throw new Error('R2 ØºÙŠØ± Ù…ÙØ¹Ù„');
    }

    try {
      const r2Prefix = `content/${videoId}`;

      // Ø±ÙØ¹ Ø§Ù„ÙÙŠØ¯ÙŠÙˆ Ø§Ù„Ø£ØµÙ„ÙŠ
      const originalPath = path.join(tempDir, 'original.mp4');
      await this.wasabiService.uploadFile(
        originalPath,
        `${r2Prefix}/original.mp4`,
      );

      // Ø±ÙØ¹ Ø§Ù„ØµÙˆØ±Ø© Ø§Ù„Ù…ØµØºØ±Ø©
      const thumbnailPath = path.join(tempDir, 'thumbnail.jpg');
      let thumbnailUrl = null;
      if (fs.existsSync(thumbnailPath)) {
        thumbnailUrl = await this.wasabiService.uploadFile(
          thumbnailPath,
          `${r2Prefix}/thumbnail.jpg`,
        );
      }

      // Ø±ÙØ¹ Ù…Ø¬Ù„Ø¯ HLS
      const hlsDir = path.join(tempDir, 'hls');
      await this.wasabiService.uploadDirectory(hlsDir, `${r2Prefix}/hls`);

      const publicUrl = this.wasabiService['publicUrl'];
      const bucketName = this.wasabiService['bucketName'];

      return {
        videoUrl: `${publicUrl}/${bucketName}/${r2Prefix}/original.mp4`,
        audioUrl: `${publicUrl}/${bucketName}/${r2Prefix}/hls/audio.m3u8`,
        thumbnailUrl: thumbnailUrl || `${publicUrl}/${bucketName}/${r2Prefix}/thumbnail.jpg`,
        hlsUrl: `${publicUrl}/${bucketName}/${r2Prefix}/hls/master.m3u8`,
      };
    } catch (error) {
      throw new Error(`ÙØ´Ù„ Ø§Ù„Ø±ÙØ¹ Ø¥Ù„Ù‰ R2: ${error.message}`);
    }
  }

  /**
   * Ø­ÙØ¸ ÙÙŠ Ù‚Ø§Ø¹Ø¯Ø© Ø§Ù„Ø¨ÙŠØ§Ù†Ø§Øª
   */
  private async saveToDatabase(
    video: ChannelVideo,
    performerId: string,
    r2Urls: any,
    categoryIds?: string[],
  ): Promise<Content> {
    const content = this.contentRepository.create({
      title: video.title,
      description: video.description,
      type: ContentType.VIDEO,
      performerId,
      thumbnailUrl: r2Urls.thumbnailUrl,
      hlsUrl: r2Urls.hlsUrl,
      audioUrl: r2Urls.audioUrl,
      originalFileUrl: r2Urls.videoUrl,
      duration: video.duration,
      originalDate: new Date(video.publishedAt),
      isProcessed: true,
      isUploadedToCloud: true,
      cloudVideoUrl: r2Urls.videoUrl,
      cloudAudioUrl: r2Urls.audioUrl,
      cloudThumbnailUrl: r2Urls.thumbnailUrl,
      cloudHlsUrl: r2Urls.hlsUrl,
    });

    const saved = await this.contentRepository.save(content);

    // Ø­ÙØ¸ metadata ÙÙŠ R2
    const performer = await this.performerRepository.findOne({
      where: { id: performerId },
    });

    if (performer) {
      const performerHash = this.metadataService.generatePerformerHash(
        performer.name,
      );
      const contentHash = this.metadataService.generateContentHash(
        video.title,
        performerHash,
      );

      await this.metadataService.saveContentMetadata({
        id: saved.id,
        hash: contentHash,
        title: video.title,
        description: video.description,
        performerHash,
        performerName: performer.name,
        type: 'video',
        duration: video.duration,
        fileSize: 0,
        originalDate: video.publishedAt,
        categories: categoryIds || [],
        thumbnailUrl: r2Urls.thumbnailUrl,
        hlsUrl: r2Urls.hlsUrl,
        audioUrl: r2Urls.audioUrl,
        createdAt: saved.createdAt.toISOString(),
        updatedAt: saved.updatedAt.toISOString(),
      });
    }

    return saved;
  }

