  private extractDateFromText(text: string): Date | null {
    try {
      // Ù…Ø­Ø§ÙˆÙ„Ø© Ø§Ø³ØªØ®Ø±Ø§Ø¬ ØªØ§Ø±ÙŠØ® Ø¨ØµÙŠØºØ© YYYY-MM-DD
      const match1 = text.match(/(\d{4})[-/](\d{1,2})[-/](\d{1,2})/);
      if (match1) {
