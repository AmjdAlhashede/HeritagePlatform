# Database - PostgreSQL
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_NAME=heritage

# JWT
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# Server
PORT=3000
NODE_ENV=development

# Upload
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=104857600
ALLOWED_VIDEO_FORMATS=mp4,mov,avi,mkv
ALLOWED_AUDIO_FORMATS=mp3,wav,aac,m4a

# FFmpeg
FFMPEG_PATH=ffmpeg

# CORS
CORS_ORIGIN=http://localhost:5173

# Wasabi S3 Storage
WASABI_ENDPOINT=https://s3.us-east-1.wasabisys.com
WASABI_REGION=us-east-1
WASABI_ACCESS_KEY_ID=your-wasabi-access-key
WASABI_SECRET_ACCESS_KEY=your-wasabi-secret-key
WASABI_BUCKET_NAME=heritage-zawamel
WASABI_PUBLIC_URL=https://s3.us-east-1.wasabisys.com/heritage-zawamel
