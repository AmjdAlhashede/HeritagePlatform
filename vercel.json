{
    "version": 2,
    "builds": [
        {
            "src": "backend/api/index.ts",
            "use": "@vercel/node"
        },
        {
            "src": "web-app/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/backend/api/index.ts"
        },
        {
            "src": "/assets/(.*)",
            "dest": "/web-app/assets/$1"
        },
        {
            "src": "/(.*)\\.(ico|png|svg|jpg|jpeg|css|js|json|txt|xml|webmanifest)",
            "dest": "/web-app/$1.$2"
        },
        {
            "src": "/(.*)",
            "dest": "/web-app/index.html"
        }
    ]
}