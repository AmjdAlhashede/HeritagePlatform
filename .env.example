# Database
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=heritage
# Optional: DATABASE_URL overrides the DB_USER/DB_PASSWORD/DB_NAME values
# Example: postgresql://postgres:postgres@postgres:5432/heritage
DATABASE_URL=

# JWT
JWT_SECRET=supersecretkey

# S3 / R2 (Wasabi or Cloudflare R2)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
S3_BUCKET=your-bucket
S3_ENDPOINT=
AWS_REGION=us-east-1

# If you DON'T use S3/R2, leave the following empty - the backend will use local uploads
S3_ENDPOINT=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_FORCE_PATH_STYLE=

# App domain (for local testing you can map orbiscodes.online to 127.0.0.1 in hosts)
APP_DOMAIN=orbiscodes.online

# Optional: other settings
NODE_ENV=production
